{
    "userAddCatalogMode": false,
    "imageQueryLayers": [
        {
            "url": "http://idmpsvr1:6080/arcgis/rest/services/CIB_CATALOG/ImageServer",
            "label": "CIB_CATALOG",
            "queryWhereClauseAppend": "Category = 1",
            "supportsThumbnails": true
        },
        {
            "url": "http://idmpsvr1:6080/arcgis/rest/services/DTED_CATALOG/ImageServer",
            "label": "DTED_CATALOG",
            "queryWhereClauseAppend": "Category = 1",
            "supportsThumbnails": true
        }/*,
        {
            "url": "http://idmpsvr1:6080/arcgis/rest/services/MAPDATA_CATALOG/ImageServer",
            "label": "MAPDATA_CATALOG",
            "queryWhereClauseAppend": "Category = 1",
            "supportsThumbnails": true
        }
        */

    ],
    "imageQueryResultDisplayFields": [
        {
            "field": "OBJECTID",
            "label": "id",
            "filter": {
                "enable": false
            },
            "gridOptions": {
                "hiddenOnDisplay": true
            }
        },
        {
            "field": "Name",
            "label": "Name",
            "filter": {
                "enable": true
            },
            "style": {
                "color": "blue",
                "fontSize": "8pt"
            },
            "gridOptions": {
                "canHide": true
            }
        },
        {
            "field": "Raster_Path",
            "label": "Path",
            "filter": {
                "enable": true,
                "unitsLabel": "m"
            },
            "style": {
                "fontSize": "8pt"
            }
        },
        {
            "field": "Tag",
            "label": "Tag",
            "filter": {
                "enable": true
            }
        }
    ],
    "popupConfiguration": {
        "displayFields": [
            "NITF_RPF_ProductionDate",
            "ProductName",
            "Name"


        ]
    },

    "resultsFormatting": {
        "displayFormats": {
            "date": "dd-MM-yyyy"
        },
        "floatPrecision": 1
    },
    "discoverGeometryUploadTask": {
        "uploadUrl": "http://idmpsvr1:6080/arcgis/rest/services/DiscoveryTools/DiscoveryGeoprocessing/GPServer/uploads/upload",
        "geoprocessingTaskUrl": "http://idmpsvr1:6080/arcgis/rest/services/DiscoveryTools/DiscoveryGeoprocessing/GPServer/fileToFeatures",
        "uploadSHPFileParameterName": "uploadSHPFile",
        "uploadKMLFileParameterName": "uploadKMLFile",
        "uploadKMZFileParameterName": "uploadKMZFile",
        "spatialReferenceWKIDParameterName": "env:outSR",
        "outputFeaturesParameterName": "outFeatures",
        "isAsync": true
    },
    "searchConfiguration": {
        "allowCheckAllSearchResultThumbnails": false

    },
    "exportConfiguration": {
        "image": {
            "height": 800,
            "width": 600
        },
        "footprints": {
            "task": {
                "url": "http://idmpsvr1:6080/arcgis/rest/services/DiscoveryTools/DiscoveryGeoprocessing/GPServer/reportGenerator",
                "featureInputParameter": "Input_JSON_String",
                "outputUrlParameter": "Report_URL",
                "isAsync": true
            }
        },
        "imageryDownload": {
            "task": {
                "url": "http://idmpsvr1:6080/arcgis/rest/services/DiscoveryTools/DiscoveryGeoprocessing/GPServer/DiscoveryDownloader",
                "downloadItemInputParameter": "inputJson",
                "outputUrlParameter": "outputZip",
                "isAsync": true
            }
        }
    },
    "utmLookup": {
        "url": "config/data/utm/UTMWKIDLookup.json"
    },
    "reporting": {
        "html": {
            "templateURL": "templates/htmlReport.html"
        }
    }
}